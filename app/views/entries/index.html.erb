<div class="row">
  <div class="col-sm-6">
    <h1>Entries</h1>
  </div>
  <div class="col-sm-6 actions">
    <p><%= link_to "Add new entry", new_entry_path, class: 'btn btn-success' %></p>
  </div>
</div>

<% if entries_grouped_by_letter.any? %>
  <ul class="letter-groups">
    <% entries_grouped_by_letter.each do |letter, entries| %>
      <li>
        <h2><%= letter %></h2>
        <ul class="entries">
          <%= render partial: 'entry', collection: entries %>
        </ul>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no entries yet. <%= link_to "Add one", new_entry_path %>.</p>
<% end %>

<p class="archived">
  <%= link_to "View archived entries", archived_entries_path %>
</p>
